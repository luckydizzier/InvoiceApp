<Window x:Class="InvoiceApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceApp" xmlns:viewModels="clr-namespace:InvoiceApp.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto"
        KeyDown="OnKeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding Invoices}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Számlaszám" DisplayMemberBinding="{Binding Number}" />
                    <GridViewColumn Header="Kiállító" DisplayMemberBinding="{Binding Issuer}" />
                    <GridViewColumn Header="Dátum" DisplayMemberBinding="{Binding Date, StringFormat=d}" />
                </GridView>
            </ListView.View>
        </ListView>
        <StatusBar Grid.Row="1">
            <TextBlock Text="{Binding StatusMessage}" />
        </StatusBar>

    </Grid>
</Window>
